# ParentSimple Environment Variables

# Database Connection
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# GHL (GoHighLevel) Webhook
PARENT_SIMPLE_GHL_WEBHOOK=https://services.leadconnectorhq.com/hooks/your_webhook_id

# ============================================================================
# Meta Conversions API (CAPI) - Separate Pixels for Each Funnel
# ============================================================================

# Life Insurance Funnel - Meta Pixel
META_PIXEL_ID_LIFE_INSURANCE=your_life_insurance_pixel_id
NEXT_PUBLIC_META_PIXEL_ID_LIFE_INSURANCE=your_life_insurance_pixel_id
META_CAPI_TOKEN_LIFE_INSURANCE=your_life_insurance_access_token
META_TEST_EVENT_CODE_LIFE_INSURANCE=TEST12345  # Optional: for testing

# College/University Funnel - Meta Pixel
META_PIXEL_ID_COLLEGE=your_college_pixel_id
NEXT_PUBLIC_META_PIXEL_ID_COLLEGE=your_college_pixel_id
META_CAPI_TOKEN_COLLEGE=your_college_access_token
META_TEST_EVENT_CODE_COLLEGE=TEST67890  # Optional: for testing

# Meta CAPI Configuration
META_CAPI_VERSION=v18.0

# ============================================================================
# Google Analytics
# ============================================================================
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# ============================================================================
# Jornaya LeadiD
# ============================================================================
NEXT_PUBLIC_JORNAYA_LEAD_ID_TOKEN=your_jornaya_token

# ============================================================================
# TrustedForm
# ============================================================================
NEXT_PUBLIC_TRUSTEDFORM_CLAIM_URL=https://cert.trustedform.com/

# ============================================================================
# Other Configuration
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=https://parentsimple.org
