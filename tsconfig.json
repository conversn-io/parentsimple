{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "QUIZ_TRACKING_EXAMPLE.tsx",
    "*_EXAMPLE.tsx",
    "*_GUIDE.*",
    "*_INSTRUCTIONS.*",
    "03-ParentSimple/**",
    "**/*_backup/**",
    "src/components 2/**",
    "src/app 2/**",
    "src/lib 2/**"
  ]
}
